<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="Moneybase.Pages.SendMoneyPages.ConfirmTransactionPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    Title="ConfirmTransactionPopup"
    BackgroundColor="{StaticResource Gray500}"
    CloseWhenBackgroundIsClicked="False">
    <Border
        Padding="20"
        BackgroundColor="{AppThemeBinding Light={StaticResource GrayBackground},
                                          Dark={StaticResource Gray900}}"
        HeightRequest="400"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="2">
        <VerticalStackLayout Spacing="10">

            <Label
                x:Name="MyLabel"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Button Text="No, wait" Clicked="Button_Clicked"/>
            <Button Text="Confirm" />
        </VerticalStackLayout>
    </Border>
</mopups:PopupPage>