<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moneybase.Pages.SignUpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignUpPage">
    <VerticalStackLayout Padding="20" VerticalOptions="Center">
        <Label
            HorizontalOptions="Center"
            Text="Great that you are here!"
            VerticalOptions="Center" />

        <Entry Keyboard="Text" Placeholder="First Name and Surname" />
        <Entry Keyboard="Telephone" Placeholder="Phone Number" />
        <Entry Keyboard="Email" Placeholder="Email Address" />

        <Button Margin="0,10" Text="Let's go!" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>